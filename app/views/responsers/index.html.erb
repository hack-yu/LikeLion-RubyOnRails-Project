<!--responser의 index 뷰-->
<div class= "login-form">
    <div class = "title">
        <%= @survey_title %>
    </div>
    <hr>
    <%= form_for @responser, url: responser_create_path(@survey.id), method: "post" do |f| %>
        <div class = "explain">취합에 응답하거나 수정하려면 입력해주세요.</div>
        <!--이후 수정을 위해서는 꼭 닉네임, 비밀번호를 기억해주세요.-->
        <div class="form-group">
            <%= f.text_field :nickname, placeholder: "닉네임" %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, placeholder: "비밀번호" %><br>
        </div>
        <div class="form-group">
            <%= f.submit "설문에 대답하기", class: "submit"  %>
        </div>
    <% end %>
</div>

<style>
    .navbar {
        visibility: hidden;
    }
    body{
    min-height: 100vh;
    background-image: linear-gradient(120deg, #f37351, #422e8a);
    }
    .login-form{
    width: 40%;
    background: #f1f1f1;
    height: 370px;
    padding: 80px 40px;
    border-radius: 10px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    }
    .title {
        font-size: 30px;
        font-weight: 700;
    }
    .explain {
        font-size: 14px;
        padding: 6px 0 12px 0;
    }
    .form-group {
        font-size: 19px;
        margin: 4px 0;
    }
    .submit {
        padding: 3px 39px;
    }

</style>