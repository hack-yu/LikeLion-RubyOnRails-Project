<div class="font">
<h1 align= "center">내 취합 목록</h1>
<div align= "right"><%= link_to "새 취합하기", root_path, class:"btn" %></div>
<br>

<!--각 취합내용-->
<%= @text %>
<% @surveys.each do |s| %>
    <span class="title-black">취합명:</span>
    <span class="title"><%= s.title %></span>
    <button type="button" class="link-btn btn-info btn-lg" data-toggle="modal" data-target="#myModal<%=s.id%>"><i class="fas fa-share-alt"> 배포링크</i></button>
   <!-- Modal -->
        <div class="modal fade" id="myModal<%=s.id%>" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">링크보기</h4>
                    </div>
                    <div class="modal-body" id="modal-link" align="center"> <!-- modal body-->
                    <h2>
                    https://163b6a0f822f49158af328354cd4e277.vfs.cloud9.ap-northeast-1.amazonaws.com/responsers/index?survey_id=<%= s.id %>
                    </h2>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
                    </div>
                </div>
            </div>
        </div>
    <span class="small-title">개설일 : <%= s.created_at.strftime("%y. %m. %d") %></span>
      <br>
    <div class="blank">
        <%= link_to "자세히 보기", survey_path(s), class: "small-btn btn-info btn-lg" %>
        <%= link_to "결과보기", surveys_link_path(s), class: "small-btn btn-info btn-lg" %>
        <%= link_to "삭제하기", survey_path(s), method: :delete, id: "becareful", class: "small-btn btn-info btn-lg"  %>
    </div>

    <hr>
<% end %>



</div>

